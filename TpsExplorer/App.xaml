<Application x:Class="TpsExplorer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TpsExplorer"
             xmlns:viewModel="clr-namespace:TpsExplorer.MVVM.ViewModel"
             xmlns:view="clr-namespace:TpsExplorer.MVVM.View"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="Theme/MenuButtonTheme.xaml"/>
                 <ResourceDictionary Source="Theme/TextBoxTheme.xaml"/>
                 <ResourceDictionary Source="Theme/ModernComboBox.xaml"/>
             </ResourceDictionary.MergedDictionaries>
             <DataTemplate DataType="{x:Type viewModel:BoxViewModel}">
                 <view:BoxView/>
             </DataTemplate>
             <DataTemplate DataType="{x:Type viewModel:HgViewModel}">
                 <view:HgBoxView/>
             </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
